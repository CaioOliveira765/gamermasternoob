<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity"
        android:background="#4093E2">

    <EditText
            android:layout_width="241dp"
            android:layout_height="51dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="52dp"
            android:background="@drawable/border_login"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.506"/>
    <EditText
            android:layout_width="243dp"
            android:layout_height="49dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/border_login" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <ImageView
            android:layout_width="201dp"
            android:layout_height="199dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="81dp"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:text="Login"
            android:layout_width="56dp"
            android:layout_height="21dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/imageView6" app:layout_constraintStart_toStartOf="@+id/imageView6"
            android:layout_marginTop="15dp" android:layout_marginLeft="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/editText" android:layout_marginStart="48dp"
            android:layout_marginBottom="15dp" app:layout_constraintVertical_bias="0.4"
            android:textColor="#fff"/>
    <ImageView
            android:layout_width="51dp"
            android:layout_height="49dp" app:srcCompat="@drawable/ic_action_name"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="52dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="42dp" app:srcCompat="@drawable/ic_action_name2"
            android:id="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="85dp"
            android:layout_marginStart="85dp" android:layout_marginEnd="3dp" android:layout_marginRight="3dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/textView3"
            android:layout_marginTop="132dp"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/textView3"
            android:textColor="#fff" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView7" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="215dp" android:layout_marginRight="215dp" android:layout_marginTop="140dp"/>
</android.support.constraint.ConstraintLayout>