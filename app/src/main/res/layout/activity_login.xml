<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity"
        android:background="#2b6be4">

    <EditText
            android:layout_width="242dp"
            android:layout_height="53dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:background="@drawable/border_login"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/senha"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Login"
            android:drawableLeft="@drawable/ic_action_name" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.521" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintVertical_bias="1.0"
            android:textColorHint="#fff"
            android:textColor="#fff"/>
    <EditText
            android:layout_width="242dp"
            android:layout_height="53dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/senha"
            android:background="@drawable/border_login"
            android:hint="password"
            android:drawableLeft="@drawable/ic_action_name2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="157dp"
            android:textColorHint="#fff"
            android:textColor="#fff"/>
    <ImageView
            android:layout_width="224dp"
            android:layout_height="203dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="99dp"
            app:layout_constraintBottom_toTopOf="@+id/senha"/>

    <TextView
            android:text="Esqueceu a Senha "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/senha" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="logar"
            android:layout_width="112dp"
            android:layout_height="43dp"
            android:id="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="60dp" app:srcCompat="@drawable/facebook"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/senha"
            android:layout_marginBottom="85dp" android:layout_marginEnd="141dp" android:layout_marginRight="141dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="60dp" app:srcCompat="@drawable/google"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"/>
</android.support.constraint.ConstraintLayout>