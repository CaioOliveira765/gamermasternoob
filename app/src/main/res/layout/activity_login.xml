<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.exemples.gamernoob.view.LoginActivity"
        android:background="#2b6be4">

    <ImageView
            android:layout_width="223dp"
            android:layout_height="192dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <Button
            android:text="Continue with Google"
            android:layout_width="249dp"
            android:layout_height="51dp"
            android:id="@+id/loginGoogle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:background="@drawable/border_google"
            android:drawableLeft="@drawable/google"
            android:textColor="#000" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <com.facebook.login.widget.LoginButton
            android:id="@+id/btnLoginFacebook"
            android:layout_width="249dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="@drawable/border_face"
            android:text="Continue with Facebook" android:textColor="#fff"
            android:drawableLeft="@drawable/facebook" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/loginGoogle"/>

    <!--<Button
            android:text="Continue with facebook"
            android:layout_width="247dp"
            android:layout_height="51dp"
            android:id="@+id/button3"
            android:background="@drawable/border_face"
            android:textColor="#fff"
            android:drawableLeft="@drawable/facebook" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/loginGoogle"/> -->
    <Button
            android:text="continuar com Email"
            android:layout_width="247dp"
            android:layout_height="51dp"
            android:id="@+id/button4"
            android:background="@drawable/border_email"
            android:textColor="#fff" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLoginFacebook" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/envelope"/>
</android.support.constraint.ConstraintLayout>